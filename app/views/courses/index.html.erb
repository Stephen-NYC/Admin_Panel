<h1>All Courses</h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Hours</th>
      </tr>
    </thead>
    <tbody>
    <% @courses.each do |c| %>
      <tr>
        <th scope="row"><%= c.id %></th>
        <td><%= c.name %></d>
        <td><%= c.hours %></td>
        <td class="btn btn-light"><%= link_to 'Show', c %></td>
        <td class="btn btn-light"><%= link_to "Edit Course", edit_course_path(c) %></td>
        <td class="btn btn-danger"><%= link_to 'Delete', c, method: :delete, data: { confirm: 'Confirm Delete' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <button type="button" class="btn btn-info"><%= link_to 'New Course', new_course_path %></button>