<h1>All Courses</h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Name</th>
        <th scope="col">Hours</th>
        <th scope="col">Cohorts</th>


      </tr>
    </thead>
    <tbody>

      <tr>
        <th scope="row"><%= @course.id %></th>
        <td><%= @course.name %></td>
        <td><%= @course.hours %></td>
                <tr>
          <th scope="row">Cohorts</th>
          <% @course.cohorts.each do |cohort| %>
          <td><%= cohort.name %> </td>
          <% end %>
      </tr>
        <td class="btn btn-light"><%= link_to "Edit Course", edit_course_path(@course) %></td>
        <td class="btn btn-danger"><%= link_to 'Delete', @course, method: :delete, data: { confirm: 'Confirm Delete' } %></td>
      </tr>

      <tr>
    </tbody>
  </table>
